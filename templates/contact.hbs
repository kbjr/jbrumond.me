<div class="content-section">
	<div class="row">
		<h2>Contact Me</h2>
		<p>
			Want to work with me? Use the form below to contact me and I'll try to get back to you soon.
		</p>
		<form action="/contact" method="post" id="contact-form">
			
			<!-- Left Panel -->
			<fieldset class="basics four columns">
			
				<label class="name required">
					<div class="label">Name</div>
					<input type="text" name="name" value="{{ prefill.name }}" placeholder="eg. Joe Bob" required />
				</label>
				
				<label class="company">
					<div class="label">Company</div>
					<input type="text" name="company" value="{{ prefill.company }}"
						placeholder="eg. Joe Bob's Awesome Shop" />
				</label>
				
				<label class="email required">
					<div class="label">Email</div>
					<input type="email" name="email" value="{{ prefill.email }}"
						placeholder="eg. joebob@example.com" required />
				</label>
				
				<label class="reason required" for="reason">
					<div class="label">Reason for Contact</div>
				</label>
				
				<ul class="reasons radios">
					<li><label>
						<input type="radio" name="reason" value="request-quote" /> Request a Quote
					</label></li>
					<li><label>
						<input type="radio" name="reason" value="request-info" /> Request Information
					</label></li>
					<li><label>
						<input type="radio" name="reason" value="other" /> Other:
						<input type="text" name="reason-other" value="{{ prefill.[reason-other] }}"
							placeholder="Enter reason here..." />
					</label></li>
				</ul>
				
			</fieldset>
			
			<!-- Right Panel -->
			<fieldset class="message eight columns">
			
				<label class="message required">
					<div class="label">Message</div>
					<textarea name="message" placeholder="Type you message here..." required>{{ prefill.message }}</textarea>
				</label>
				
				<div class="buttons">
					<input type="reset" value="Clear Form" class="reset" />
					<input type="submit" value="Send Message" class="submit" />
					<div class="spinner"></div>
				</div>
				
			</fieldset>
		</form>
	</div>
</div>
