<!--[if gt IE 8]><!--> <html lang="en"> <!--<![endif]-->
<head>

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, maximum-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	
	<title>{{ titlePrefix }}James Brumond</title>

	<link rel="stylesheet" type="text/css" href="/fonts/overlock/stylesheet.css" />
	<link rel="stylesheet" type="text/css" href="/fonts/district-thin/stylesheet.css" />
	{{#if env.is.development }}
	<link rel="stylesheet" type="text/css" href="/stylesheets/foundation.css" />
		{{#if isResume }}
		<link rel="stylesheet" type="text/css" href="/stylesheets/resume.css" />
		{{else}}
		<link rel="stylesheet" type="text/css" href="/stylesheets/app.css" />
		{{/if}}
	{{else}}
		{{#if isResume }}
		<link rel="stylesheet" type="text/css" href="/resume.min.css" />
		{{else}}
		<link rel="stylesheet" type="text/css" href="/style.min.css" />
		{{/if}}
	{{/if}}

	<script type="text/javascript" src="/javascripts/prefixfree.min.js"></script>
	
</head>
<body>

	<div class="container" id="wrapper">
		
		<div id="header-wrapper">
			<div id="header">
				<div class="row centered-content">
					{{#if isResume }}
					<div class="six columns">
						<h1>James Brumond</h1>
					</div>
					<div class="six columns">
						<div class="contact">
							<a href="http://www.jbrumond.me">http://jbrumond.me</a><br />
							<a href="mailto:james@jbrumond.me">james@jbrumond.me</a><br />
							360.713.8824
						</div>
					</div>
					{{else}}
					<h1><a href="/">James Brumond</a></h1>
					{{/if}}
				</div>
			</div>
		</div>
		
		<div id="content" class="centered-content">
			{{{ body }}}
		</div>
		
		{{#unless isResume }}
		<div id="footer">
			<div id="footer-inner">
				<div class="row centered-content">
					<ul class="social-icons">
						{{#each icons }}
						<li>
							<a href="{{ this.href }}">
								<img src="/images/icons/{{ this.image }}" width="48" height="48"
									alt="{{ this.title }}" title="{{ this.title }}" />
							</a>
						</li>
						{{/each}}
					</ul>
					<p>
						Copyright &copy; {{now "yyyy" }} James Brumond<br />
						Powered by <a href="http://nodejs.org">Node.js</a> and
						<a href="http://expressjs.com">Express</a>.
						Hosted on <a href="http://heroku.com">Heroku</a>.
					</p>
				</div>
			</div>
		</div>
		{{/unless}}
		
	</div>
	
</body>
</html>
